hostname leaf3
!
vlan 4094
   trunk group mlag-peer
!
vlan 4093
!
interface Port-Channel100
   description mlag
   switchport mode trunk
   switchport trunk group mlag-peer
!
interface Ethernet1
   description mlag
   channel-group 100 mode active
!
interface Ethernet2
   description spine1
   mtu 9100
   no switchport
   ip address 10.0.0.5/31
   isis enable UNDERLAY
   isis network point-to-point
!
interface Ethernet3
   description spine2
   mtu 9100
   no switchport
   ip address 10.0.0.13/31
   isis enable UNDERLAY
   isis network point-to-point
!
interface Ethernet4
   description host2
   channel-group 2 mode active
!
interface Ethernet5
   description host2-later-a/a
   shutdown
!
interface Port-Channel2
   description host2
   switchport mode trunk
   mlag 2
!
interface Loopback0
   description bgp-evpn
   ip address 123.1.1.5/32
   isis enable UNDERLAY
   isis passive
!
interface Loopback1
   description vxlan
   ip address 2.2.2.2/32
   isis enable UNDERLAY
   isis passive
!
interface Vlan4094
   ip address 172.16.1.0/31
!
interface Vlan4093
   ip address 172.16.2.2/31
   isis enable UNDERLAY
   isis network point-to-point
!
interface Vxlan1
   vxlan source-interface Loopback1
   vxlan udp-port 4789
!
ip routing
!
router isis UNDERLAY
   net 49.0001.1230.0100.1005.00
   router-id IPv4 123.1.1.5
   is-type level-2
   is-hostname leaf3
   log-adjacency-changes
   !
   address-family IPv4 unicast
      maximum-paths 2
      address-family ipv4 unicast
!
mlag configuration
   domain-id mlag
   local-interface Vlan4094
   peer-address 172.16.1.1
   peer-link Port-Channel100
!!
router bgp 65002
   router-id 123.1.1.5
   no bgp default ipv4-unicast
   maximum-paths 2 ecmp 2
   neighbor overlay-leaf-sessions peer group
   neighbor overlay-leaf-sessions remote-as 65000
   neighbor overlay-leaf-sessions update-source Loopback0
   neighbor overlay-leaf-sessions ebgp-multihop 2
   neighbor overlay-leaf-sessions send-community extended
   neighbor overlay-leaf-sessions maximum-routes 0
   neighbor 123.1.1.1 peer group overlay-leaf-sessions
   neighbor 123.1.1.2 peer group overlay-leaf-sessions
   !
   address-family evpn
  	neighbor overlay-leaf-sessions activate
   !
!
end
